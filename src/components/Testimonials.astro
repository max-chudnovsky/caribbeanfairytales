---
// Testimonials section
const testimonials = [
  {
    name: "Sarah Mitchell",
    location: "Miami, FL",
    cruise: "Royal Caribbean Explorer",
    rating: 5,
    text: "Absolutely incredible experience! Our guide Carlos was knowledgeable and fun. The Saona Island tour exceeded all expectations. Perfect timing for our cruise schedule!",
    avatar: "https://images.unsplash.com/photo-1494790108755-2616b612b5c5?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"
  },
  {
    name: "David & Maria Rodriguez", 
    location: "Houston, TX",
    cruise: "Norwegian Breakaway",
    rating: 5,
    text: "The colonial walking tour was fascinating! We learned so much about Dominican history. The whole family loved it, and we made it back to our ship with time to spare.",
    avatar: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"
  },
  {
    name: "Jennifer Walsh",
    location: "Boston, MA", 
    cruise: "Celebrity Summit",
    rating: 5,
    text: "Beach Paradise Tour was exactly what we needed - relaxation and adventure combined! The snorkeling was amazing and the drinks were flowing. Highly recommend!",
    avatar: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"
  }
];
---

<section class="py-20 bg-gradient-to-br from-cyan-400 to-blue-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-black text-white mb-4 tracking-wide">WHAT OUR GUESTS SAY</h2>
      <p class="text-lg text-cyan-100">Real experiences from real travelers</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, _) => (
        <div class="bg-white rounded-xl p-6 shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <!-- Rating Stars -->
          <div class="flex mb-4">
            {Array.from({ length: testimonial.rating }, () => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          
          <!-- Testimonial Text -->
          <blockquote class="text-gray-700 mb-6 leading-relaxed">
            "{testimonial.text}"
          </blockquote>
          
          <!-- Customer Info -->
          <div class="flex items-center">
            <img 
              src={testimonial.avatar}
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover mr-4"
            />
            <div>
              <div class="font-bold text-black">{testimonial.name}</div>
              <div class="text-sm text-gray-600">{testimonial.location}</div>
              <div class="text-xs text-cyan-600 font-medium">{testimonial.cruise}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Trust Badges -->
    <div class="mt-16 text-center">
      <div class="flex flex-wrap justify-center items-center space-x-8 space-y-4">
        <div class="flex items-center text-white">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-semibold">TripAdvisor Certified</span>
        </div>
        <div class="flex items-center text-white">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-semibold">Safety Certified</span>
        </div>
        <div class="flex items-center text-white">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-semibold">4.9/5 Rating</span>
        </div>
      </div>
    </div>
  </div>
</section>