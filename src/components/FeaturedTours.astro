---
// Featured Tours section with database integration
const API_BASE = import.meta.env.DEV ? 'http://localhost:4321' : 'https://carribeanfairytales.pages.dev';

// Sample tours for development fallback
const fallbackTours = [
  {
    id: 1,
    title: "Beach Paradise Tour",
    description: "Relax on pristine beaches with complimentary drinks and snorkeling equipment",
    price: 89.99,
    duration_hours: 8,
    destination_name: "Punta Cana Beach"
  },
  {
    id: 2,
    title: "Colonial History Walking Tour", 
    description: "Explore the first European city in the Americas with expert guides",
    price: 45.99,
    duration_hours: 4,
    destination_name: "Santo Domingo Historic"
  },
  {
    id: 3,
    title: "Saona Island Adventure",
    description: "Full day excursion to the most beautiful island in the Caribbean", 
    price: 129.99,
    duration_hours: 10,
    destination_name: "Saona Island"
  }
];

let tours = fallbackTours;

// Try to fetch from API in production
if (!import.meta.env.DEV) {
  try {
    const response = await fetch(`${API_BASE}/api/tours`);
    if (response.ok) {
      const data = await response.json();
      if (data.success && data.tours.length > 0) {
        tours = data.tours;
      }
    }
  } catch (error) {
    console.log('Using fallback tours data');
  }
}
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-black text-black mb-4 tracking-wide">FEATURED TOURS</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover our most popular adventures in the Dominican Republic</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {tours.map((tour) => (
        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <!-- Tour Image -->
          <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-cyan-100 to-blue-100">
            <img 
              src={`https://images.unsplash.com/photo-${tour.id === 1 ? '1544551763-46a013bb70d5' : tour.id === 2 ? '1571019613454-1cb2f99b2d8b' : '1506905925346-21bda4d32df4'}?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80`}
              alt={tour.title}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          
          <!-- Tour Content -->
          <div class="p-6">
            <div class="mb-3">
              <span class="inline-block bg-orange-100 text-orange-800 text-xs font-semibold px-2 py-1 rounded">
                {tour.destination_name}
              </span>
            </div>
            
            <h3 class="text-xl font-bold text-black mb-2 group-hover:text-cyan-600 transition-colors">
              {tour.title}
            </h3>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              {tour.description}
            </p>
            
            <!-- Tour Details -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center space-x-4">
                <div class="flex items-center text-gray-500 text-sm">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {tour.duration_hours}h
                </div>
              </div>
              
              <div class="text-right">
                <span class="text-2xl font-bold text-orange-500">${tour.price}</span>
                <div class="text-xs text-gray-500">per person</div>
              </div>
            </div>
            
            <!-- Book Now Button -->
            <button class="w-full bg-cyan-400 hover:bg-cyan-500 text-white font-semibold py-3 px-4 rounded transition-all duration-300 transform hover:-translate-y-0.5">
              View Tour
            </button>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View All Tours Button -->
    <div class="text-center mt-12">
      <a href="/tours" class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:-translate-y-1">
        VIEW ALL TOURS
      </a>
    </div>
  </div>
</section>